# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'SecretKeyManager' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SecretKeyManager
  # 键盘遮挡解决方案
  pod 'IQKeyboardManagerSwift', '~>  6.5.0'
  # Kingfisher 是一个下载、缓存网络图片的轻量级纯swift库
  pod 'Kingfisher'
  # 自动约束布局
  pod 'SnapKit'
  # 图片选择器
  pod 'HXPHPicker', '~> 1.2.0'
  # 大图查看
  pod 'ZLPhotoBrowser'
  # 伪随机数
  pod 'SwiftRandom'
  # Toast提示
  pod 'Toast-Swift', '~> 5.0.1'
  # 本地数据库
  pod 'RealmSwift', '10.13.0'
  # 本地对象存储，类似sp
  pod 'DefaultsKit'
  # 16进制颜色转换
  pod 'Hue'
end

